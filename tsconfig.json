{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "assets",
    "components",
    "pages",
    "sass"
  ]
}